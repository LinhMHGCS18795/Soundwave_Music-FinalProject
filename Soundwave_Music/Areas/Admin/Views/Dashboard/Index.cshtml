                                    <div class="icon">
                                        <i class="bi bi-music-note-beamed" style="color: #14B8A6;"></i>
                                    </div>
                                </div>
                                <div class="text_count">
                                    <p class="report_type">Total Song</p>
                                    <p class="count_total">@ViewBag.countsong</p>
