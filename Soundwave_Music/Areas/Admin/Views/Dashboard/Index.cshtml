    <div class="post d-flex flex-column-fluid" id="kt_post">
        <!--begin::Container-->
        <div id="kt_content_container" class="container">
            <!--begin::Card-->
            <div class="card">
                <!--begin::Row-->
                <div class="row gy-5 gx-xl-8 mt-1 pb-2 ps-5 pe-5">
                    <!--begin::Col-->
                    <!--begin::Col-->
                    <div class="col-lg-3">
                        <!-- small box -->
                        <div class="small-box">
                            <div class="inner" style="background-color: #3B82F6; ">
                                <div>
                                    <div class="icon">
                                        <i class="bi bi-people-fill" style="color: #CCFBF1;"></i>
                                    </div>
                                </div>
                                <div class="text_count">
                                    <p class="report_type">Total Users</p>
                                    <p class="count_total">@ViewBag.countuser</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end::Col-->
                    <!--begin::Col-->
                    <div class="col-lg-3">
